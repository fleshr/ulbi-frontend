{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "strict": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": { "namedExports": false }
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "prettier.config.mjs"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
