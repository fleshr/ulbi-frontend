{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2015",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "namedExports": false,
          "classnameTransform": "camelCaseOnly"
        }
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "prettier.config.mjs",
    "stylelint.config.mjs",
    "lint-staged.config.mjs"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
